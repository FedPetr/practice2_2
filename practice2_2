Задание 3

#include <iostream>
using namespace std;

int main() {
    int a;
    cin >> a;
    int b;
    b = 0;
    int c;
    c = 0;
    int m;
    m = 1;
    while(a>0){
        b = a % 10;
        c += b*m;
        m *= 2;
        a = a / 10;
    }
    cout << c << endl;
    return 0;
}

Задание 4

#include <iostream>
using namespace std;

int main() {
    int a;
    cin >> a;
    int b;
    b = 0;
    int c;
    c = 0;
    int m;
    m = 1;
    while(a>0){
        b = a % 2;
        c += b*m;
        m *= 10;
        a = a / 2;
    }
    cout << c << endl;
    return 0;
}
